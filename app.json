{
  "expo": {
    "name": "Ada",
    "slug": "ada",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "dark",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#0F0F14"
    },
    "scheme": "ada",
    "ios": {
      "supportsTablet": false,
      "bundleIdentifier": "com.ada.app",
      "infoPlist": {
        "NSPhotoLibraryUsageDescription": "Ada needs access to save shared images.",
        "NSCalendarsUsageDescription": "Ada can add events to your calendar.",
        "NSUserNotificationsUsageDescription": "Ada sends reminders for time-sensitive items."
      }
    },
    "plugins": [
      "expo-router",
      "expo-secure-store",
      [
        "expo-share-extension",
        {
          "activationRules": {
            "NSExtensionActivationSupportsText": true,
            "NSExtensionActivationSupportsWebURLWithMaxCount": 1,
            "NSExtensionActivationSupportsImageWithMaxCount": 1
          }
        }
      ],
      "expo-calendar",
      "expo-notifications"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "eas": {
        "projectId": "YOUR_EAS_PROJECT_ID"
      },
      "router": {
        "origin": false
      }
    }
  }
}
